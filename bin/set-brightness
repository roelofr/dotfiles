#!/usr/bin/env bash

if [ "$1" = "up" ]; then
    xbacklight +10
elif [ "$1" = "down" ]; then
    brightnessFloat="$( xbacklight -get )"
    let brightness="${brightnessFloat%.*}"

    # Brightness procentually lowerable
    if [ $brightness -ge 11 ]; then
        xbacklight -10
        exit
    fi

    # Set to 1
    xbacklight -set 1
else
    echo "Usage: $0 {up|down}"
    exit 0
fi
