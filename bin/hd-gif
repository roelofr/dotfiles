#!/usr/bin/env bash

gif_fps="${2:-15}"
gif_height="${3:-480}"

gif_frame="$( tempfile --suffix=.jpg )"
gif_palette="$( tempfile --suffix=.png )"

gif_source="$1"
gif_dest="${gif_source%%.*}-hd.gif"
set -e

ffmpeg \
	-i "$gif_source" \
	-vf "fps=$gif_fps,scale=$gif_height:-2" \
	-frames:v 1 \
	-y \
	"$gif_frame"

ffmpeg \
	-i "$gif_frame" \
	-vf palettegen \
	-y \
	"$gif_palette"

rm $gif_frame

ffmpeg \
	-i "$gif_source" \
	-i "$gif_palette" \
	-filter_complex "fps=$gif_fps,scale=$gif_height:-2:flags=lanczos[x];[x][1:v]paletteuse" \
	"$gif_dest"

rm $gif_palette

echo "$( basename "$gif_source" ) â†’ $( basename "$gif_dest" )"
