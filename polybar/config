[colors]
; Colours
black = #ff000000
red = #d70000
blue = #00d7ff
blue2 = 00afff
purple = #875fd7
yellow = #ffdf00
green = #5fff5f
darkgrey = #262626
darkgrey-alt = #444444
grey = #808080
lightgrey = #dadada
lightgrey-alt = #6c6c6c

background = ${self.darkgrey}
background-alt = ${self.darkgrey-alt}
foreground = ${self.lightgrey}
foreground-alt = ${self.lightgrey-alt}

primary = ${self.blue}
secondary = ${self.yellow}
idle = ${self.blue2}
alert = ${self.red}

; COLORS FOR PARTS

; Battery
bat-chrg = #00afd7
bat-live = #8787af
bat-full = #00ff87

; Applications
redshift = ${self.grey}
vpn = ${self.secondary}
docker = #00afff
time = ${self.idle}
date = ${self.idle}
window = ${self.primary}

; Hardware
hardware = ${self.grey}
ram = ${self.hardware}
cpu = ${self.hardware}
keyboard = ${self.hardware}

; Temp (part of Hardware)
temp-norm = ${self.hardware}
temp-warn = ${self.alert}

; Drives
filesystem = ${self.grey}

; Network
wlan-on = ${self.purple}
wlan-off = ${self.foreground-alt}
eth-on = ${self.yellow}
eth-off = ${self.foreground-alt}

; Volume
volume-on = ${self.idle}
volume-off = ${self.lightgrey-alt}

[fonts]
mono = "Source Code Pro:size=11;2"
sans = "Roboto:size=11;2"
icon = "Font Awesome 5 Pro Light:size=12:weight=light;3"
icon2 = "Font Awesome 5 Pro Regular:size=12;3"
brand = "Font Awesome 5 Brands:size=12;3"

[custom]
width = 100%
height = 28
radius = 0.0
icon-padding = 3

[bar/base]
width = ${custom.width}
height = ${custom.height}
offset-x = 0
offset-y = 0
radius = ${custom.radius}
fixed-center = true

background = ${colors.black}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = ${fonts.sans}
font-1 = ${fonts.mono}
font-2 = ${fonts.icon}
font-3 = ${fonts.icon2}
font-4 = ${fonts.brand}

[bar/topbar]
;monitor = ${env:MONITOR:HDMI-1}
inherit = bar/base

modules-left = brightness redshift filesystem-root filesystem-home filesystem-var docker
modules-center =
modules-right = memory cpu temperature battery time

[bar/bottombar]
;monitor = ${env:MONITOR:HDMI-1}
inherit = bar/base
bottom = true

modules-left = i3
modules-center =
modules-right = volume vpn wlan eth-laptop eth-desktop date

tray-position = right
tray-padding = 2

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix-foreground = ${colors.keyboard}
format-prefix-padding-right = ${custom.icon-padding}
format-prefix = ""

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}

[module/filesystem-base]
type = internal/fs
interval = 30

format-mounted-prefix-foreground = ${colors.filesystem}
format-mounted-prefix-padding-right = ${custom.icon-padding}
format-mounted-prefix = 

label-mounted = %percentage_used%%

label-unmounted-foreground = ${colors.lightgrey-alt}
label-unmounted = n/a

[module/filesystem-home]
inherit = module/filesystem-base

mount-0 = /home
format-mounted-prefix = 

[module/filesystem-root]
inherit = module/filesystem-base

mount-0 = /
format-mounted-prefix = 

[module/filesystem-var]
inherit = module/filesystem-base

mount-0 = /var
format-mounted-prefix = 

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.darkgrey-alt}
label-focused-foreground = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${self.label-focused-foreground}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

[module/brightness]
type = internal/xbacklight
output = eDP-1

format-prefix-foreground = ${colors.brightness}
format-prefix = ""
format = <label>

label = "%percentage%%"

[module/brightness-acpi]
inherit = module/brightness
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2

format-prefix-foreground = ${colors.cpu}
format-prefix-padding-right = ${custom.icon-padding}
;format-prefix = ""
format-prefix = ""

label = %percentage%%

[module/memory]
type = internal/memory
interval = 2

format-prefix-foreground = ${colors.ram}
format-prefix-padding-right = ${custom.icon-padding}
;format-prefix = ""
format-prefix = ""

label = %gb_used%

[module/temperature]
type = internal/temperature
interval = 2

thermal-zone = 1
warn-temperature = 70

format = <ramp> <label>

format-warn-prefix-padding-right = ${custom.icon-padding}
format-warn-prefix = 
format-warn-foreground = ${colors.temp-warn}
format-warn = <label-warn>

label = %temperature%
label-warn = %temperature%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-5 = 
ramp-6 = 
ramp-padding-right = {custom.icon-padding}
ramp-foreground = ${colors.temp-norm}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-prefix-foreground = ${colors.wlan-on}
format-connected-prefix-padding-right = ${custom.icon-padding}
format-connected-prefix = ""
format-connected = <label-connected>
label-connected = %essid%

format-disconnected-prefix-foreground = ${colors.wlan-off}
format-disconnected-prefix-padding-right = ${custom.icon-padding}
format-disconnected-prefix = ""
format-disconnected = <label-disconnected>

label-disconnected-foreground = ${colors.wlan-off}
label-disconnected = offline

[module/eth]
type = internal/network
interval = 3.0

format-connected-prefix-foreground = ${colors.eth-on}
format-connected-prefix-padding-right = ${custom.icon-padding}
format-connected-prefix = ""
label-connected = %local_ip%

format-disconnected-prefix-foreground = ${colors.eth-off}
format-disconnected-prefix-padding-right = ${custom.icon-padding}
format-disconnected-prefix = ""
format-disconnected = <label-disconnected>

label-disconnected-foreground = ${colors.eth-off}
label-disconnected = offline

[module/eth-desktop]
inherit = module/eth
interface = enp4s0f1

[module/eth-laptop]
inherit = module/eth
interface = enp4s0f1


[module/date]
type = internal/date
interval = 10

date = "%b %d"
date-alt = "%Y-%m-%d (week %U)"

time = "%I:%M %p"
time-alt = "%H:%M:%S"

format-prefix-foreground = ${colors.date}
format-prefix-padding-right = ${custom.icon-padding}
format-prefix = ""

label = %date%

[module/time]
type = internal/date
inherit = module/date

format-prefix-foreground = ${colors.time}
format-prefix-padding-right = ${custom.icon-padding}
format-prefix = ""
label = %time%

[module/volume]
type = internal/volume

master-soundcard = hw:1
speaker-soundcard = hw:1,0
headphone-soundcard = hw:1,2

format-volume-prefix-foreground = ${colors.volume-on}
format-volume-prefix-padding-right = ${custom.icon-padding}
format-volume-prefix = ""
format-volume = <label-volume>
label-volume = %percentage%%

label-muted-foreground = ${colors.volume-off}
label-muted = ""

;ramp-volume-0 = ""
;ramp-volume-1 = ""
;ramp-volume-2 = ""
;ramp-volume-padding-right = ${custom.icon-padding}
;ramp-volume-foreground = ${colors.volume-on}

[module/battery]
