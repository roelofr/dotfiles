[module/vpn]
type = custom/script

exec-if = /home/roelof/bin/vpn-status check
exec = /home/roelof/bin/vpn-status
interval = 5

format-prefix-foreground = ${colors.vpn}
format-prefix-padding-right = ${custom.icon-padding}
format-prefix = ""

[module/docker]
type = custom/script

exec-if = /home/roelof/bin/status-docker
exec = /home/roelof/bin/status-docker count
interval = 5

format-prefix-foreground = ${colors.docker}
format-prefix-padding-right = ${custom.icon-padding}
format-prefix = ""

