# vim: set filetype=swayconfig :
# Sway config file

# Set default modifier
set $mod Mod4
set $altMod Mod1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $altMod

# Load configs
include /home/roelof/.config/sway/config.d/*

# Load remaining files
include /etc/sway/config.d/*
