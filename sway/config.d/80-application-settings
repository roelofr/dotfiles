# vim: set filetype=swayconfig :
# Window settings

# Make the borders a bit bigger, but hide them entirely on tiling windows,
# otherwise i3-gaps will vomit.
for_window [class="^.*"] border normal
for_window [tiling] border none

# CUSTOM PANEL STYLING
for_window [class="Firefo*" instance="Popup"] floating enable, border none, background none
for_window [class="Firefo*" window_role="About"] floating enable, border normal
for_window [class="Firefo*" window_role="browser"] floating disable, border none

# Keybase
for_window [class="Keybase"] floating enable, border normal

# Chrome
for_window [class="Chromium" window_role="pop-up"] floating enable, border normal

# Gimp, LibreOffice and Spotify
for_window [class="Gimp" window_role="gimp-startup"] floating enable, border none
for_window [class="Spotify" instance="spotify" title="Spotify"] border none

# Gnome settings
for_window [instance="gnome-control-center"] floating enable, border none

# Steam!
for_window [class="Steam" instance="Steam"] floating disable, border none

# Intellij and PhpStorm
for_window [instance="sun-awt-X11-XDialogPeer" title=" "] floating enable, border none

# Openshot
for_window [class="openshot" title="Tutorial"] border none, floating enable, background none

# Polybar
for_window [class="Polybar" instance="polybar"] floating enable

