# vim: set filetype=swayconfig :
# Jetbrains editor picker 

# Selector for Jetbrains editors
set $mode_jetbrains JetBrains picker: (I) Intellij Idea (P) PhpStorm
mode "$mode_jetbrains" {
    bindsym i exec "/home/roelof/bin/idea", mode "default"
    bindsym j exec "/home/roelof/bin/idea", mode "default"

    bindsym p exec "/home/roelof/bin/phpstorm", mode "default"
    bindsym s exec "/home/roelof/bin/phpstorm", mode "default"

    # Up to editors: Backspace
    bindsym Backspace mode "$mode_editor"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

