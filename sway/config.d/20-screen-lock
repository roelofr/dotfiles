# vim: set filetype=swayconfig :
# Screen locker

# Output locking
exec swayidle -w \
         timeout 300 'swaylock -f' \
         timeout 600 'swaymsg "output * dpms off"' \
              resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f'

# Enable lock screen with Alt-L

#
# Install a system state combined with the pause/break key,
# also bind ALT-L to lock the system
#

bindsym Mod1+l exec swaylock -f
