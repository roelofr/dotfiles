# vim: set filetype=swayconfig :
# User hotkeys

#
# OS-LEVEL HOTKEYS
# Hotkeys to start browser, explorer and stuff like that
#
bindsym $mod+w exec ~/Apps/Firefox/firefox-bin
bindsym $mod+Shift+w exec chromium
bindsym $mod+f exec nautilus "${HOME}"

# Open settings with Mod + Shift + P
bindsym $mod+Shift+p exec "${HOME}/bin/control-center"

#
# Custom keys
#

# "Music" key on work PC (XF86Tools)
bindsym 0x1008ff81 exec --no-startup-id /home/roelof/bin/volume-control phone

# Toggle redshift with alt+pgup
# bindsym $mod+Shift+pageUp exec --no-startup-id /home/roelof/bin/redshift-toggle
