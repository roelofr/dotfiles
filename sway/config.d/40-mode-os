# vim: set filetype=swayconfig :
# System mode

# Show a message containing the commands
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (R) reboot, (S) shutdown

# Add commands
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker, exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker, exec --no-startup-id systemctl hibernate, mode "default"
    bindsym Shift+r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Switch to the OS-mode, used to change OS power state
bindsym $mod+x mode "$mode_system"
